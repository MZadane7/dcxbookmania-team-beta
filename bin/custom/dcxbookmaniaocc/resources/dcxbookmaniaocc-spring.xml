<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />



	<alias name="customItemDao" alias="customItemDao" />
	<bean id="customItemDao" class="com.dcx.bookmania.dao.impl.CustomItemDaoImpl">
		<property name="flexibleSearchService" ref="flexibleSearchService" />
		<property name="modelService" ref="modelService" />
	</bean>
	
	<bean id="customItemServiceImpl" class="com.dcx.bookmania.service.CustomItemServiceImpl" />
	

	<alias name="customItemFacade" alias="customItemFacade" />
	<bean id="customItemFacade" class="com.dcx.bookmania.facades.impl.CustomItemFacadeImpl">
		<property name="customItemServiceImpl" ref="customItemServiceImpl" />
		<property name="customItemConverter" ref="customItemConverter"/>
	</bean>

	<alias name="customItemConverter" alias="customItemConverter"/>
	<bean id="customItemConverter" parent="abstractPopulatingConverter">
		<property name="targetClass" value="de.hybris.platform.commercefacades.customitem.data.CustomItemData" />
		<property name="populators">
			<list>
				<ref bean="customItemPopulator" />
			</list>
		</property>
	</bean>
	
	
	<bean id="customItemPopulator" class="com.dcx.bookmania.populator.CustomItemPopulator" />
</beans>
